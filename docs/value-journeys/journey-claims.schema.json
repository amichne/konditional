{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Konditional journey claims registry",
  "type": "object",
  "required": [
    "claims"
  ],
  "properties": {
    "owner_routing": {
      "type": "object",
      "description": "Maps module ids to CODEOWNERS path patterns.",
      "additionalProperties": {
        "type": "string",
        "minLength": 1
      }
    },
    "claims": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "journey_id",
          "claim_id",
          "claim_statement",
          "decision_type",
          "doc_scope",
          "doc_page",
          "claim_kind",
          "non_trivial",
          "signatures",
          "tests",
          "status",
          "owner_modules"
        ],
        "properties": {
          "journey_id": {
            "type": "string",
            "pattern": "^[A-Z]{2,}-[0-9]{3}$"
          },
          "claim_id": {
            "type": "string",
            "pattern": "^[A-Z]{2,}-[0-9]{3}-C[0-9]+$"
          },
          "claim_statement": {
            "type": "string",
            "minLength": 10
          },
          "decision_type": {
            "type": "string",
            "enum": [
              "adopt",
              "migrate",
              "operate"
            ]
          },
          "doc_scope": {
            "type": "string",
            "enum": [
              "value_journey",
              "theory",
              "learn"
            ]
          },
          "doc_page": {
            "type": "string",
            "minLength": 1
          },
          "claim_kind": {
            "type": "string",
            "enum": [
              "guarantee",
              "mechanism",
              "boundary",
              "failure_mode",
              "performance"
            ]
          },
          "non_trivial": {
            "type": "boolean"
          },
          "signatures": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "kind",
                "signature"
              ],
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "type",
                    "method",
                    "field"
                  ]
                },
                "signature": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "additionalProperties": false
            }
          },
          "tests": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "supported",
              "at_risk",
              "missing"
            ]
          },
          "owner_modules": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
